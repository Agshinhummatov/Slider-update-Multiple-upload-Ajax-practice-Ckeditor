@model Experts

@{
    ViewData["Title"] = "Edit";
}


<div class="container my-5">
    <h2 style="color:darkcyan; text-align:center;" class="mt-3"> Expert edit</h2>
    <div class="slider-content my-5">
        <img src="~/img/@Model.Image" style="width:150px; height:150px;" />
    </div>
    <form class="form-sample" asp-action="Edit" method="post" enctype="multipart/form-data">

        <input class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>


        <h4 style="color:darkred" class="mt-3"> Header </h4>
        <input type="text" class="form-control" id="customFile" asp-for="Name" placeholder="Header" />   @*Bu asp-for="Name"  Category nin ichinde olan name propertisidi ve eger inputlarim coxdusa deyisecek onlar *@
        <span class="text-danger" asp-validation-for="Name"></span>

        <h4 style="color:darkred" class="mt-3"> Description </h4>
        <input type="text" class="form-control" id="customFile" asp-for="Position" placeholder="Description" />   @*Bu asp-for="Name"  Category nin ichinde olan name propertisidi ve eger inputlarim coxdusa deyisecek onlar *@
        <span class="text-danger" asp-validation-for="Position"></span>


        <div class="buttons my-3 mt-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />

}
