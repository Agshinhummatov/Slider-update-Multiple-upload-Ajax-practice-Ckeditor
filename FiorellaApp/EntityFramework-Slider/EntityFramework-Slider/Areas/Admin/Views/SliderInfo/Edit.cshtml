@model SliderInfo

@{
    ViewData["Title"] = "Edit";
}


<div class="container my-5">
    <h2 style="color:darkcyan; text-align:center;" class="mt-3"> Slider info edit</h2>
    <div class="slider-content my-5">
        <img src="~/img/@Model.SignatureImage" style="width:150px; height:150px;" />
    </div>
    <form class="form-sample" asp-action="Edit" method="post" enctype="multipart/form-data">

        <h4 style="color:darkred" class="mt-3">Title</h4>
        @*  <input type="text" minlength="" maxlength="" class="form-control" id="customFile" asp-for="Name" />  *@ @*Bu asp-for="Name"  Category nin ichinde olan name propertisidi ve eger inputlarim coxdusa deyisecek onlar *@
        <textarea class="form-control" id="category-text" asp-for="Title" rows="5"></textarea>
        <span class="text-danger" asp-validation-for="Title"></span>  @*bu span inputun altinda errorun yazilmasi uchundur. Name inputunun yaninda*@

        <h4 style="color:darkred" class="mt-5">Image </h4>
        <input class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>


        <h4 style="color:darkred" class="mt-3">Description </h4>
        <input type="text" class="form-control" id="customFile" asp-for="Description" placeholder="Description" />   @*Bu asp-for="Name"  Category nin ichinde olan name propertisidi ve eger inputlarim coxdusa deyisecek onlar *@
        <span class="text-danger" asp-validation-for="Description"></span>

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>

</div>


@section Scripts{


    <partial name="_ValidationScriptsPartial" />
    @* cagirmalisanki inputa bos qalanda yazsinki bos buraxmaq olmaz*@

    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("category-text")  //checkeditor qosanda mutleq bildirmeliyem burdaki getsin yuxardaki areani deyiij


    </script>


}

