@model IEnumerable<ExpertsHeader>

@{
    ViewData["Title"] = "ExpertHeader";
}


<div class="container my-5">
    <a class="btn btn-success" style="float: right;" asp-action="Create">Create</a>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var expertsHeader in Model)
                {
                    <tr>
                        <td class="py-1">
                            @expertsHeader.Title
                        </td>

                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@expertsHeader.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@expertsHeader.Id">Edit</a>
                            <form asp-action="Delete" asp-route-id="@expertsHeader.Id" method="post" style="display:inline-block">

                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>


                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>
