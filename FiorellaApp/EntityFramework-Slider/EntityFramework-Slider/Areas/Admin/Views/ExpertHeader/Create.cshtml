@model ExpertsHeader


@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <span class="text-danger">@ViewBag.error</span>
    <form class="form-sample" asp-action="Create" method="post">

        <input type="text" class="form-control" id="customFile" asp-for="Title" />   @*Bu name Category nin ichinde olan name propertisidi*@
        <input type="text" class="form-control" id="customFile" asp-for="Description" />
       
        <span class="text-danger" asp-validation-for="Title"></span>
        <span class="text-danger" asp-validation-for="Description"></span>
        @*bu span inputun altinda errorun yazilmasi uchundur. Name inputunun yaninda*@
        @*span name e ne validation elesek gelib onu spanin ichinde yazdiracaq*@
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>
